block lkstyle
  link(rel='stylesheet', href='/css/login.css')
block title
  title #{pageTitle}
block content
    .header
      .logo-con
        a.head-logo(href="/")
        |             
        p.logo-text 欢迎登陆
        |             
        .header-login
          p 已有账号？
          |                 
          a.login(href="/login") 请登录
    |     
    .content
      .container
        .login-block.clearfix
          .tab-block
            .table-title.clearfix
              .t-l
                a(href="##") 扫码登陆
              |                         
              .t-r
                a(href="##") 账户登陆
            |                     
            |                     
            .tab-body
              .account-login
                form(action="/login",method="post")
                  .form-item.input-block
                    label(for="username").username-label
                    |                                     
                    input(type="text", name="username", placeholder="邮箱/用户名/已验证手机")
                  |                                 
                  .form-item.input-block
                    label(for="pwd").pwd-label
                    |                                         
                    input(type="password", name="pwd", placeholder="密码")
                  |                                 
                  .form-item.forget-block
                    a(href="##") 忘记密码
                  |                                 
                  .form-item.submit-block
                    a(href="##",name="submit",class="login-submit-btn") 提交
          |                 
          .login-footer
            a.qq-lk(href="##")
              i.qq-icon
              |                         
              span QQ
            |                     
            a.wechat-lk(href="##")
