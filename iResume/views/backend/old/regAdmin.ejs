<%- include('common') -%>
  <style>
    .reg-box {
      position: absolute;
      width: 40vw;
      height: 200px;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;


    }
  </style>

  <body>
    <div class="reg-box">
      <form action="/backend/regg" method="post">
        <div class="form-horizontal">
          <div class="form-group">
            <label for="reg_name">用户名</label>
            <input type="text" class="form-control" name="reg_name" id="reg_name" placeholder="名字">
          </div>
          <div class="form-group">
            <label for="reg_pwd">密码</label>
            <input type="password" class="form-control" name="reg_pwd" id="reg_pwd" placeholder="密码">
          </div>
          <div class="form-group">
            <select name="reg_permissions" id="permissions" class="form-control">
              <option value="normal">NORMAL</option>
              <option value="admin">ADMIN</option>
            </select>
          </div>
          <div class="form-group">
            <input type="text" name="reg_tel" placeholder="手机号" class="form-control">
          </div>
          <div class="form-group">
            <button type='submit' class='btn btn-primary'> 提交</button>
          </div>
        </div>
      </form>
    </div>
    </div>
    </div>
    </div>
    <%- include('footer') -%>